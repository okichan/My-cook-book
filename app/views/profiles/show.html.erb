<p id="notice"><%= notice %></p>

<div class="container">

  <div class="row">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h1 class="hero-font text-center" style="padding-bottom: 30px; font-size: 5em;">User profile</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-4">
      <%= image_tag @profile.image, width: 300 %>
    </div>

    <div class="col-md-5">

      <p class="hero-font">
        <%= @profile.first_name %> <%= @profile.last_name %>
      </p>

      <p>
        <%= @profile.bio %>
      </p>


      <%= link_to 'Edit profile', edit_profile_path(@profile) %>

    </div>

  </div>
</div>
</div>
